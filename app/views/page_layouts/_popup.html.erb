

<style>
#overlay_form<%= "#{page.id}#{formnum}" %>{
position: relative;
border: 5px solid red;
-webkit-border-radius: 15px;
border-radius: 15px;
padding: 10px;
background: white;
width: 150px;
height: 200px;
background-color: none;
background-repeat: no-repeat;
text-align: center;
margin: -250px 0px 0px 150px;
}

#pop<%= "#{page.id}#{formnum}" %> {
display: block;
}

#overlay_form<%= "#{page.id}#{formnum}" %> a {
  margin: -80px 0px;
  font-size: 14px;
  color: red;
}

</style>

<script type="text/javascript">


// ******POPOUT #1 *******
$(document).ready(function(){
//open popup
$("#pop<%= "#{page.id}#{formnum}" %>").click(function(){
$("#overlay_form<%= "#{page.id}#{formnum}" %>").fadeIn(500);
});

//close popup
$("#pop<%= "#{page.id}#{formnum}" %>close").click(function(){
$("#overlay_form<%= "#{page.id}#{formnum}" %>").fadeOut(500);
});
});

</script>

<form id="overlay_form<%= "#{page.id}#{formnum}" %>" style="display:none">
    <% if text_present == true %>
      <%= link_to "Edit Text", edit_text_url(position.id, :position => formnum) %>
    <% else %>
      <%= link_to "Add Text", new_text_url(:page_id => page.id, :position => formnum) %>
    <% end %>
    <p class="add-buttons"></p>
    <%= link_to image_tag("iconmonstr-trash-can-15-icon.png", :class => 'popup-button'), delete_position_url(page.id,formnum), :method => 'delete', data: { confirm: "Do you really want to delete the content in this box?" } %>
    <br />
    <%= link_to image_tag("iconmonstr-x-mark-3-icon.png", :class => 'closebutton edit-button pull-right', :id => "pop#{page.id}#{formnum}close"), "#_" %>
</form>




