<h1>Roles</h1>

<p><%= link_to 'Add a New Role', new_role_url %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Book</th>
      <th>User</th>
      <th>The Role type</th>
    </tr>
  </thead>

  <tbody>
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.book.name %></td>
      <td><%= role.user.full_name %></td>
      <td><%= role.role_type %></td>

      <td><%= link_to 'Show', role_url(role) %></td>
      <td><%= link_to 'Edit', edit_role_url(role) %></td>
      <td><%= link_to 'Destroy', role_url(role), method: 'delete', data: { confirm: "Do you really want to delete this role?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

