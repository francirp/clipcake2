<h1>New Role</h1>


<%= form_tag(roles_url, method: 'post') do %>


  <div>
    <%= label_tag :book_id %><br />
    <%= select_tag :book_id, options_from_collection_for_select(Book.all, :id, :name) %>
  </div>

    <div>
    <%= label_tag :user_id %><br />
    <%= number_field_tag :user_id %>
  </div>

    <div>
    <%= label_tag :role_type %><br />
    <%= text_field_tag :role_type %>
  </div>


  <div>
    <%= submit_tag "Create Role" %>
  </div>
<% end %>
