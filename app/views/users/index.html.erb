<h1>Users</h1>

<p><%= link_to 'Add a New User', new_user_url %></p>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Password</th>
      <th>Billing address</th>
      <th>Billing city</th>
      <th>Billing state</th>
      <th>Billing phone</th>
      <th>Shipping address</th>
      <th>Shipping city</th>
      <th>Shipping state</th>
      <th>Shipping phone</th>
      <th>Access token</th>
      <th>Facebook</th>
      <th>Is activated</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.password %></td>
      <td><%= user.billing_address %></td>
      <td><%= user.billing_city %></td>
      <td><%= user.billing_state %></td>
      <td><%= user.billing_phone %></td>
      <td><%= user.shipping_address %></td>
      <td><%= user.shipping_city %></td>
      <td><%= user.shipping_state %></td>
      <td><%= user.shipping_phone %></td>
      <td><%= user.access_token %></td>
      <td><%= user.facebook_id %></td>
      <td><%= user.is_activated %></td>
  
      <td><%= link_to 'Show', user_url(user) %></td>
      <td><%= link_to 'Edit', edit_user_url(user) %></td>
      <td><%= link_to 'Destroy', user_url(user), method: 'delete', data: { confirm: "Do you really want to delete this user?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

