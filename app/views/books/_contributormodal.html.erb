<script>
      $(document).ready(function() { $("#e9").select2(); });
</script>

<% @friends = current_user.facebook.friends %>

<!-- Modal -->
<div id="contributormodal" class="modal hide fade" role="dialog" aria-labelledby="Add Contributors" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Add Contributors</h3>
  </div>
  <!-- FORM START -->

  <%= form_tag(roles_url, method: 'post', :class => 'clearfix form-horizontal') do %>
  <div class="modal-body">
      <p>
        <!-- FORM FIELDS -->
    <div class="control-group">
      <%= label_tag "friend_id[]", 'Invitees', :class => "control-label" %>
       <div class="controls">
          <select id="e9" size="20" multiple="multiple" name="friend_id[]">
            <% @friends.each do |friend| %>
              <option value="<%= friend["uid"] %>"><%= friend["name"] %></option>
            <% end %>
          </select>
      </div>
    </div>

    <%= hidden_field_tag :book_id, @book.id %>
  </p>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button type="submit" class="btn btn-primary">Save Invite</button>
    </div>
    <% end %>
</div>
